  #include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main() {
    int p,r,y;
    scanf("%d%d%d",&p,&r,&y);
    float si,amt,dis,fs;
    si = (p*r*y)/100;
    amt= p+ si;
    dis = 0.02*si;
    fs = amt-dis;
    printf("%0.2f\n",si);
    printf("%0.2f\n",amt);
    printf("%0.2f\n",dis);
    printf("%0.2f",fs);
    return 0;
}
