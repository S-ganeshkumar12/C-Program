Sum of Digits

#include <stdio.h>

int main() {
    int num, sum = 0;
    scanf("%d", &num);
    if (num < 10 || num > 99) {
        printf("Invalid Input\n");
    } else {
        int digit1 = num / 10;   
        int digit2 = num % 10;     
        sum = digit1 + digit2;
        printf("Sum of Digit %d is %03d\n", num, sum);
    }

    return 0;
}
