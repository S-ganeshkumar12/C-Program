Vowels or Consonants

#include <stdio.h>
#include <ctype.h>

int main() {
    char ch;
    scanf(" %c", &ch); 
    if (isalpha(ch)) {
        char lowerCh = tolower(ch);
        if (lowerCh == 'a' || lowerCh == 'e' || lowerCh == 'i' || lowerCh == 'o' || lowerCh == 'u') {
            printf("The Character %c is Vowel\n", ch);
        } else {
            printf("The Character %c is Consonant\n", ch);
        }
    } else {
        printf("Invalid Input\n");
    }

    return 0;
}
