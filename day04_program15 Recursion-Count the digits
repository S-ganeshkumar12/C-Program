Recursion-Count the digits

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int countDigits(long long n) {
    if (n < 0) n = -n;
    if (n == 0)
        return 0;
    return 1 + countDigits(n / 10);
}

int main() {
    long long num;
    scanf("%lld", &num);

    if (num == 0) {
        printf("The Count the digits: 1\n");
    } else {
        int count = countDigits(num);
        printf("The Count the digits: %d\n", count);
    }
    return 0;
}
